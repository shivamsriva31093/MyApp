<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.nbk.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottomnav_color</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/bottom_nav_elevation</item>
        <item name="badgeColor">?colorAccent</item>
        <item name="badgeRadius">3dp</item>
    </style>

    <style name="HomescreenCardView" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPaddingBottom">@dimen/default_padding</item>
        <item name="contentPaddingTop">@dimen/default_padding</item>
        <item name="contentPaddingLeft">@dimen/default_padding</item>
        <item name="contentPaddingRight">@dimen/default_padding</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="cardtheme1" parent="CardView">
        <item name="cardCornerRadius">9dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="cardtheme2" parent="CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:background">@drawable/white_corners</item>
    </style>

    <style name="mainButtonStyle">
        <item name="android:background">@drawable/selector_search_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextLabel">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <dimen name="bottom_nav_elevation">8dp</dimen>
    <dimen name="default_padding">8dp</dimen>
</resources>
